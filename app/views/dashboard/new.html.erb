<% title "CalTime - Dashboard" %>

<div ng-controller="DashboardCtrl" class="container dashboard-container">
	<div class="row dashboard-header">
		<div class="col-md-6 dashboard-greeting">
			<%= current_user.name %>'s Dashboard
		</div>
		<div class="col-md-6 dashboard-date">
			{{date | date:"MM/dd/yyyy"}} 
		</div>
		
	</div>
	<div class="summary row">
		<div class="col-md-4">

			<div class="<%= @enough_work ? 'success-color' : 'failure-color' %> row summary-header ">
				You completed <%= @total_work %> hours of work today.
			</div>
			<div class="row summary-header">
				We recommend that you complete <%= @recommended_time %> hours of work today.
			</div>
			<div class="row summary-body">
				<div>
					You worked on the following tasks today:
					<ul>
						<% @tasks_worked.each do |task| %>
							<li><%= task %></li>
						<% end %>
					</ul>
					
				</div>
			</div>
		</div>

		<div class="col-md-offset-1 col-md-7">
			<div id="summary-bar"></div>
		</div>
	</div>

</div>